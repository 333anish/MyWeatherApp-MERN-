<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinnks}}
</head>
<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_value">0</span><sup>0</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>

                </div>
            </div>     
        </div>
    </div>
     {{>footer}}

     <script src="./js/main.js">

     </script>
     <script>
       
        const getCrrrentDay=()=>{
        var weekday=new Array(7);
        weekday[0]="Sunday";
        weekday[1]="Monday";
        weekday[2]="Tuesday";
        weekday[3]="Wednesday";
        weekday[4]="Thursday";
        weekday[5]="Friday";
        weekday[6]="Saturday";
        let currentTime=new Date();
        console.log(weekday[currentTime.getDay()]); //getDay return integer 0-6 to show weekdays...so we use array to show name of days
         let day=document.getElementById('day');
        day.innerText=weekday[currentTime.getDay()];

        let today_data=document.getElementById("today_data");
        var months=["Jan","Feb","Mar","Apr","May","June","July","Aug","Sept","Oct","Nov","Dec"];
        today_data.innerText=`${currentTime.getDate()} ${months[currentTime.getMonth()+1]}`;
        
    }
    getCrrrentDay();
     </script>
</body>
</html>